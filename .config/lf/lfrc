map o open

cmd zip %{{
    for file in "$fx"
    do
        zip -r "$file.zip" "$file"
    done
}}

cmd tar %{{
    for file in "$fx"
    do
        tar -cf "$file.tar" "$file"
    done
}}

cmd targz %{{
    for file in "$fx"
    do
        tar -czf "$file.tar.gz" "$file"
    done
}}

map az zip
map at tar
map ag targz
map ab targz
map au unarchive

map e

#!/bin/sh
export HISTFILE="$ZDOTDIR"/zsh-history
export HISTSIZE=1000000
export SAVEHIST=1000000
# export PATH="$HOME/.local/bin":$PATH
# export MANPAGER="nvim +Man!"
# export MANPAGER="nvimpager"
export MANPAGER="sh -c 'col -bx | bat -l man --theme Catppuccin -p --pager 'less -Rf' --paging always"
export PAGER="sh -c 'col -bx | bat -l man --theme Catppuccin -p --pager 'less -Rf' --paging always"
export GOPATH="$HOME/.local/go"
export PATH="$PATH:$GOPATH"

man() {
	width=$(tput cols)
	[ "$width" -gt "$MANWIDTH" ] && width=$MANWIDTH
	env MANWIDTH="$width" \
	man "$@"
}

export EDITOR="code"
export TERMINAL="alacritty"
export BROWSER="firefox"
export VISUAL="code"
export VIDEO="vlc"
export OPENER="xdg-open"
export PAGER="nvimpager"

# exa
export EXA_COLORS="fi=38;5;251:di=38;5;061:ex=38;5;109:ur=38;5;062:uw=38;5;168:ux=38;5;30:ue=38;5;30:gr=38;5;061:gw=38;5;204:gx=38;5;30:tr=38;5;060:tw=38;5;204:tx=38;5;30:da=1;34:uu=38;5;062:gu=38;5;061:un=38;5;060:gn=38;5;060:sn=38;5;073:sb=38;5;043:ln=38;5;037:or=38;5;168"
